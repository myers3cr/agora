<h2>Jobs</h2>
<% if notice %><p id="notice"><%= notice %></p><% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Category</th>
    <th>Customer</th>
    <th>Bid Due</th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.jobname %></td>
		<td><%= job.status %></td>
		<td><%= job.category %></td>
		<td><%= job.customer %></td>
		<td><%= job.bid_due %></td>
    <td class="icon"><%= link_to (image_tag("pencil.png", :class => "icon")), edit_job_path(job) %></td>
    <td class="icon"><%= link_to (image_tag("delete.png", :class => "icon")), job_path(job), data: { confirm: 'Are you sure?', method: :delete } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
