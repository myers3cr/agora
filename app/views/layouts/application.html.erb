  <title>Agora</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div id="container">

		<div id="header">
			<% if session[:user_id] %>
				<p>Logged in as: <%= current_user.username %> | <%= link_to 'Logout', logout_path, method: :delete %>
				</p>
			<% end %>
			<h1>Agora</h1>
			<h2>The World's Marketplace&trade;</h2>
		</div> <!-- end header div -->

		<div id="navigation">
			<ul>
				<li><%= link_to 'Home', main_path %></li>
				<li><%= link_to "Messages", admin_messages_path%></li>
				<li><%= link_to "Currencies", admin_currencies_path %></li>
				<li><%= link_to "Organizations", orgs_path %></li>
				<li><%= link_to "Users", users_path %></li>
				<li><a href="#">Reports</a></li>
				<li><a href="#">Preferences</a></li>
				<li><a href="#">App Settings</a></li>
			</ul>					
		</div> <!-- end navigation div -->

		<div id="content">

			<%= yield %>

		</div> <!-- end content div -->

		<div id="footer">
			<p>&copy; 2012 C.R. Myers | Original site design by <a href="http://andreasviklund.com/">Andreas Viklund</a></p>
		</div> <!-- end footer div -->

	</div> <!-- end container div -->
</body>
</html>
