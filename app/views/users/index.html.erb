<h2>Users</h2>
<% if notice %><p id="notice"><%= notice %></p><% end %>
<table>
	<tr>
		<th>Username</th>
		<th>Organization</th>
		<th>Full Name</th>
		<th>Email</th>
		<th>Phone</th>
		<th></th>
		<th></th>
	</tr>

<% @users.each do |user| %>
	<tr>
		<td><%= user.username %></td>
		<td><%= user.org.name %></td>
		<td><%= user.full_name %></td>
		<td><%= user.email %></td>
		<td><%= user.phone %></td>		
		<td class="icon"><%= link_to (image_tag("pencil.png", :class => "icon")), edit_user_path(user) %></td>
		<td class="icon"><%= link_to (image_tag("delete.png", :class => "icon")), user, confirm: "Permanently delete #{user.username}?", method: :delete %></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
