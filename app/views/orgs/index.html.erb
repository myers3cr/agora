<h2>Organizations</h2>
<% if notice %><p id="notice"><%= notice %></p><% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Currency</th>
    <th></th>
    <th></th>
  </tr>

<% @orgs.each do |org| %>
  <tr>
    <td><%= org.name %></td>
    <td><%= org.org_type.name %></td>
    <td><%= org.currency.iso_code %></td>
    <td class="icon"><%= link_to (image_tag("pencil.png", :class => "icon")), edit_org_path(org) %></td>
    <td class="icon"><%= link_to (image_tag("delete.png", :class => "icon")), org, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Organization', new_org_path %>
