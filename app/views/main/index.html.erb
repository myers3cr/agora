<h2>News from the Agora team</h2>
<% if @messages.count == 0 %>
	<div class="default">
		<p>No news is good news!</p>
	</div> <!-- end default div -->
	<% else @messages.each do |message| %>
		<div class="message">
			<h3 class="headline" ><%= message.headline %></h3>
			<p class="small" >Posted: <%= time_ago_in_words(message.start_date) %> ago</p>
			<p><%= message.content %></p>
		</div> <!-- end message div -->
	<% end %>
	<%= will_paginate @messages %>
<% end %>