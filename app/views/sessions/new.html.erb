<div class="login_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

<fieldset>
	<legend>Please Login</legend>	
	<%= form_tag do %>
		<div class="field">
	    <%= label_tag :username, "Username:" %><br />
	    <%= text_field_tag :username, params[:username], autofocus: "autofocus" %>
	  </div>
	  <div class="field">
	    <%= label_tag :password, "Password:" %><br />
	    <%= password_field_tag :password, params[:password] %>
	  </div>
</fieldset>
	  <div class="actions">
	    <%= submit_tag "Login" %>
	  </div>
	<% end %>
</div>  