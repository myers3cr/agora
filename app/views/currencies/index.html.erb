<h1>Currencies</h1>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Iso code</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.iso_code %></td>
    <td><%= currency.description %></td>
    <td><%= link_to (image_tag("pencil.png", :class => "icon")), edit_currency_path(currency) %></td>
    <td><%= link_to (image_tag("delete.png", :class => "icon")), currency, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

